<h1>Doctor: <%= @doctor.name %>

<% unless @doctor.specialty.empty? %>
    <p>
        <strong>Specialty:</strong>
        <%= @doctor.specialty %>
    </p>
    <hr />
<% end %>

<% if @doctor.patients.any? %>
<h5>Patients</h5>
<ul>
    <% @doctor.appointments.each do |appointment| %>
        <li>
            <%= appointment.patient.name %> - <%= appointment.date %> -
            <%= link_to 'Remove', appointment_path(@doctor, appointment), method: :delete, data: {confirm: "Really remove this appointment?" } %>
        </li>
    <% end %>
</ul>
<% else %>
    <h5>No Patients Found</h5>
<% end %>

<%= link_to 'All Doctors', doctors_path %>
<%= link_to 'Edit', edit_doctor_path(@doctor) %> 


